{
"$schema": "https://schemas.wp.org/trunk/block.json",
"apiVersion": 3,
"name": "portfolio-blocks/pb-video-block",
"version": "1.0.0",
"title": "Video Block",
"category": "portfolio-blocks",
"icon": "video-alt3",
"example": {}, 
"textdomain": "portfolio-blocks",
"parent": [
		"portfolio-blocks/video-gallery-block"
	],
"supports": {
	"inserter": false,
	"align": [ "wide", "full" ],
	"html": false,
	"reusable": false
},
"attributes": {
	"videoUrl": { "type": "string", "default": "" },
	"thumbnail": { "type": "string", "default": "" },
	"title": { "type": "string", "default": "" },
	"description": { "type": "string", "default": "" },
	"aspectRatio": { "type": "string", "default": "16:9" }, 
	"playButtonVisibility": { "type": "string", "default": "onHover" },
	"titleVisibility": { "type": "string", "default": "onHover" },
	"filterCategory": { "type": "string", "default": ""},
	"thumbnailSize": { "type": "string", "default": "large" }, 
	"thumbnailId": { "type": "number" },
	"borderWidth": { "type": "number", "default": 0 }, 
	"borderRadius": { "type": "number", "default": 0 },
	"borderColor": { "type": "string", "default": "#ffffff" }, 
	"dropShadow": { "type": "boolean", "default": false }, 
	"lazyLoad": { "type": "boolean", "default": false }, 
	"lightboxLayout": { "type": "string", "default": "video-only" }, 
	"wooProductId": { "type": "number", "default": 0 },
	"wooProductName": { "type": "string", "default": ""},
	"wooProductPrice": { "type": "string", "default": "" },
	"wooProductImage": { "type": "string", "default": "" },
	"wooProductDescription": { "type": "string", "default": "" },
	"wooProductURL": { "type": "string", "default": ""}
},
"usesContext": [
	"portfolioBlocks/enableWooCommerce",
    "portfolioBlocks/wooCartIconDisplay",
    "portfolioBlocks/wooLightboxInfoType",
	"portfolioBlocks/lazyLoad",
	"portfolioBlocks/aspectRatio",
	"portfolioBlocks/playButtonVisibility",
	"portfolioBlocks/titleVisibility",
	"portfolioBlocks/filterCategories",
	"portfolioBlocks/activeFilter",
	"portfolioBlocks/lightbox", 
	"portfolioBlocks/lightboxLayout",
	"portfolioBlocks/thumbnailSize",
	"portfolioBlocks/borderWidth",
	"portfolioBlocks/borderRadius",
	"portfolioBlocks/borderColor", 
	"portfolioBlocks/dropShadow"
],
"editorScript": "file:./index.js",
"editorStyle": "file:./index.css",
"style": "file:./style-index.css",
"render": "file:./render.php",
"viewScript": "file:./view.js"
}